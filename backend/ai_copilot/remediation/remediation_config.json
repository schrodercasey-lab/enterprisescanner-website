{
  "database_path": "jupiter_remediation.db",
  "connection_pool_size": 5,
  "connection_timeout": 30,
  "enable_wal_mode": true,
  
  "risk_weights": {
    "severity": 0.25,
    "exploitability": 0.20,
    "asset_criticality": 0.20,
    "patch_maturity": 0.15,
    "dependencies": 0.10,
    "rollback_complexity": 0.10
  },
  
  "autonomy_thresholds": {
    "5": 0.85,
    "4": 0.70,
    "3": 0.50,
    "2": 0.30,
    "1": 0.15,
    "0": 0.0
  },
  
  "business_hours_start": 9,
  "business_hours_end": 17,
  "business_days": [0, 1, 2, 3, 4],
  "timezone": "UTC",
  
  "high_impact_compliance": [
    "PCI-DSS",
    "HIPAA",
    "SOX",
    "FISMA",
    "FedRAMP",
    "GDPR",
    "CCPA"
  ],
  
  "cache_enabled": true,
  "cache_ttl_seconds": 300,
  "max_cache_entries": 1000,
  
  "log_level": "INFO",
  "log_file": "remediation.log",
  "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
  "log_max_bytes": 10485760,
  "log_backup_count": 5,
  
  "max_concurrent_remediations": 10,
  "execution_timeout_seconds": 3600,
  "sandbox_timeout_seconds": 1800,
  "monitoring_duration_seconds": 300,
  
  "max_retries": 3,
  "retry_delay_seconds": 60,
  "exponential_backoff": true,
  
  "snapshot_retention_days": 30,
  "auto_cleanup_expired_snapshots": true,
  "snapshot_verification_enabled": true,
  
  "patch_signature_verification": true,
  "patch_maturity_threshold_days": 7,
  "trusted_patch_sources": [
    "vendor_official",
    "os_package_manager",
    "docker_registry"
  ],
  
  "default_strategy": "blue-green",
  "canary_stages": [5, 25, 50, 100],
  "rolling_batch_size": 5,
  "deployment_health_check_interval": 30,
  
  "ml_model_path": "models/remediation_risk_model.pkl",
  "ml_confidence_threshold": 0.85,
  "ml_retraining_interval_days": 30,
  "ml_min_training_samples": 1000,
  
  "blockchain_enabled": false,
  "blockchain_network": "hyperledger",
  "audit_retention_months": 12,
  
  "alert_on_autonomy_level": [3, 4, 5],
  "alert_on_rollback": true,
  "alert_on_failure": true,
  "notification_channels": ["email", "slack"]
}
