# ========================================
# AI COPILOT - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# LLM PROVIDERS
# ========================================

# OpenAI (REQUIRED for GPT-4)
OPENAI_API_KEY=sk-proj-...your-key-here...

# Anthropic (OPTIONAL for Claude)
ANTHROPIC_API_KEY=sk-ant-...your-key-here...

# Google AI (OPTIONAL for Gemini)
GOOGLE_API_KEY=...your-key-here...

# Default LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# ========================================
# VECTOR DATABASE
# ========================================

# ChromaDB (Development - No config needed)
# Data stored in: ./data/chromadb

# Pinecone (Production - RECOMMENDED)
USE_PINECONE=false
PINECONE_API_KEY=...your-key-here...
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=enterprisescanner-ai

# ========================================
# DATABASE
# ========================================

# PostgreSQL (Enterprise Scanner Database)
DATABASE_URL=postgresql://user:password@localhost:5432/enterprisescanner

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ========================================
# REDIS (Rate Limiting & Caching)
# ========================================

REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# ========================================
# API CONFIGURATION
# ========================================

API_HOST=0.0.0.0
API_PORT=5000

# CORS Settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,https://enterprisescanner.com

# WebSocket Settings
ENABLE_WEBSOCKET=true
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# ========================================
# SECURITY
# ========================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Token Expiration (seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# Password Requirements
MIN_PASSWORD_LENGTH=12
REQUIRE_PASSWORD_COMPLEXITY=true

# ========================================
# RATE LIMITING
# ========================================

ENABLE_RATE_LIMITING=true

# Access Level Limits (queries per day)
RATE_LIMIT_PUBLIC=10
RATE_LIMIT_SALES=100
RATE_LIMIT_CUSTOMER=1000
RATE_LIMIT_DEVELOPER=500
RATE_LIMIT_ADMIN=2000
RATE_LIMIT_MILITARY=unlimited

# ========================================
# LOGGING
# ========================================

LOG_LEVEL=INFO
LOG_FILE=logs/copilot.log
LOG_FORMAT=detailed
ENABLE_COLORED_LOGS=true

# Log Rotation
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ========================================
# MONITORING
# ========================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_INTERVAL=60

# ========================================
# AI COPILOT FEATURES
# ========================================

# Scan Analysis
ENABLE_SCAN_ANALYSIS=true
SCAN_ANALYSIS_MAX_VULNS=1000

# Threat Intelligence
ENABLE_THREAT_INTEL=true
CVE_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
MITRE_ATTACK_API=https://attack.mitre.org/api

# Remediation
ENABLE_REMEDIATION=true
ENABLE_AUTO_REMEDIATION=false

# Knowledge Base
ENABLE_KNOWLEDGE_BASE=true
KB_MAX_DOCUMENTS=10000
KB_CHUNK_SIZE=1000
KB_CHUNK_OVERLAP=200

# ========================================
# ADVANCED SETTINGS
# ========================================

# Context Manager
MAX_CONTEXT_LENGTH=4000
CONTEXT_COMPRESSION=true

# Response Streaming
ENABLE_STREAMING=true
STREAM_CHUNK_SIZE=100

# Query Processing
MAX_QUERY_LENGTH=2000
MIN_CONFIDENCE_THRESHOLD=0.7

# ========================================
# DEVELOPMENT
# ========================================

# Debug Mode (NEVER ENABLE IN PRODUCTION!)
DEBUG=false
FLASK_DEBUG=false

# Test Mode
ENABLE_TEST_MODE=false
MOCK_LLM_RESPONSES=false

# ========================================
# DEPLOYMENT
# ========================================

# Environment
ENVIRONMENT=production

# Scaling
WORKERS=4
THREADS=2

# Timeouts
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=65

# ========================================
# BUSINESS INTELLIGENCE
# ========================================

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Usage Tracking
TRACK_QUERY_TYPES=true
TRACK_RESPONSE_QUALITY=true
TRACK_USER_SATISFACTION=true

# ========================================
# COMPLIANCE
# ========================================

# Data Retention
QUERY_RETENTION_DAYS=365
SESSION_RETENTION_DAYS=90
LOG_RETENTION_DAYS=180

# Privacy
ANONYMIZE_LOGS=false
ENABLE_GDPR_MODE=false

# ========================================
# NOTIFICATIONS
# ========================================

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@enterprisescanner.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@enterprisescanner.com

# Alert Thresholds
ALERT_ON_HIGH_ERROR_RATE=true
ERROR_RATE_THRESHOLD=0.05
ALERT_ON_RATE_LIMIT_BREACH=true

# ========================================
# INTEGRATIONS
# ========================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SLACK_CHANNEL=#ai-copilot-alerts

# PagerDuty
PAGERDUTY_API_KEY=...your-key-here...
PAGERDUTY_SERVICE_ID=...your-service-id...

# ========================================
# BACKUP & DISASTER RECOVERY
# ========================================

# Backups
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=s3://enterprisescanner-backups/copilot

# ========================================
# EXPERIMENTAL FEATURES
# ========================================

# Voice Interface (Phase 2)
ENABLE_VOICE=false
GROK_API_KEY=...your-key-here...

# Phone Alerts (Phase 2)
ENABLE_PHONE_ALERTS=false
TWILIO_ACCOUNT_SID=...your-sid...
TWILIO_AUTH_TOKEN=...your-token...
TWILIO_PHONE_NUMBER=+1234567890

# Autonomous Mode (Military Only)
ENABLE_AUTONOMOUS_MODE=false
AUTO_REMEDIATION_REQUIRE_APPROVAL=true

# ========================================
# NOTES
# ========================================

# 1. ALWAYS change JWT_SECRET_KEY in production
# 2. Use Pinecone for production (ChromaDB is dev-only)
# 3. Enable Redis for distributed rate limiting
# 4. Set DEBUG=false in production
# 5. Configure proper CORS origins
# 6. Set up monitoring and alerting
# 7. Review rate limits for your use case
# 8. Configure backup strategy
# 9. Test integrations before going live
# 10. Keep API keys secure (never commit to git)
