# Phase 3 Environment Configuration Template
# Copy this file to .env and customize for your environment

# ===== ENVIRONMENT SETTINGS =====
ENV=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=/var/log/enterprise-scanner/phase3.log

# ===== DIRECTORY SETTINGS =====
SCRIPT_OUTPUT_DIR=/opt/enterprise-scanner/scripts
CONFIG_OUTPUT_DIR=/opt/enterprise-scanner/configs
CONFIG_BACKUP_DIR=/opt/enterprise-scanner/config_backups

# ===== SCRIPT GENERATOR SETTINGS =====
MAX_SCRIPT_SIZE=10485760  # 10MB
SCRIPT_RETENTION_DAYS=30
ENABLE_SCRIPT_VALIDATION=true

# ===== CONFIG GENERATOR SETTINGS =====
BACKUP_CONFIGS=true
DEFAULT_HARDENING_LEVEL=standard

# ===== PROACTIVE MONITOR SETTINGS =====
MONITORING_INTERVAL=300  # 5 minutes
ALERT_RETENTION_DAYS=90
DEFAULT_MONITORING_LEVEL=medium
ENABLE_ANOMALY_DETECTION=true
ANOMALY_CONFIDENCE_THRESHOLD=0.8

# ===== EMAIL ALERT CONFIGURATION =====
EMAIL_ENABLED=true
SMTP_HOST=smtp.company.com
SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_FROM=security-alerts@company.com
EMAIL_PASSWORD=<SECURE_PASSWORD_HERE>
EMAIL_TO_LIST=security-team@company.com,soc@company.com

# ===== SLACK INTEGRATION =====
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-alerts

# ===== WEBHOOK INTEGRATION =====
WEBHOOK_ENABLED=true
WEBHOOK_URL=https://siem.company.com/api/alerts
WEBHOOK_AUTH_TOKEN=<SECURE_TOKEN_HERE>
WEBHOOK_TIMEOUT=10

# ===== SMS ALERTS (Future) =====
SMS_ENABLED=false
SMS_PROVIDER=twilio

# ===== PERFORMANCE SETTINGS =====
MAX_CONCURRENT_OPS=10
OPERATION_TIMEOUT=300
ENABLE_PERFORMANCE_MONITORING=true

# ===== DATABASE SETTINGS =====
PHASE3_DB_PATH=/opt/enterprise-scanner/data/phase3.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400  # 24 hours

# ===== SECURITY SETTINGS =====
ENABLE_SAFETY_CHECKS=true
REQUIRE_CODE_REVIEW=false
MAX_DANGEROUS_COMMANDS=3

# ===== NOTES =====
# - Replace all <SECURE_*_HERE> placeholders with actual values
# - Ensure proper file permissions (chmod 600 .env)
# - Never commit .env file to version control
# - Use environment-specific files (.env.development, .env.production)
