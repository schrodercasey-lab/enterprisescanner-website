# Enterprise Scanner - Production Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=enterprisescanner
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456

# ============================================
# APPLICATION SECRETS
# ============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_789
FLASK_ENV=production

# ============================================
# GUNICORN CONFIGURATION
# ============================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# ============================================
# SSL/TLS CONFIGURATION
# ============================================
SSL_CERT_EMAIL=admin@enterprisescanner.com
DOMAIN_NAME=enterprisescanner.com

# ============================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=info@enterprisescanner.com
SALES_EMAIL=sales@enterprisescanner.com
SUPPORT_EMAIL=support@enterprisescanner.com

# ============================================
# STRIPE PAYMENT CONFIGURATION
# ============================================
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# AWS S3 CONFIGURATION (for file storage)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=enterprisescanner-production
AWS_REGION=us-east-1

# ============================================
# MONITORING & LOGGING
# ============================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=INFO

# ============================================
# SECURITY SETTINGS
# ============================================
ALLOWED_HOSTS=enterprisescanner.com,www.enterprisescanner.com
CORS_ORIGINS=https://enterprisescanner.com,https://www.enterprisescanner.com
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=100

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_CHAT=true
ENABLE_ASSESSMENTS=true
ENABLE_ANALYTICS=true
ENABLE_API_DOCS=true
ENABLE_PARTNER_PORTAL=true
ENABLE_ONBOARDING=true
ENABLE_MONITORING=true

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
HUBSPOT_API_KEY=your_hubspot_api_key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=enterprisescanner-backups
