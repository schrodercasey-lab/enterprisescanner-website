# Enterprise Scanner - Local Development Environment
# This file is used for local Docker development

# Database Configuration
POSTGRES_DB=enterprisescanner_dev
POSTGRES_USER=admin
POSTGRES_PASSWORD=dev_password_123

# Redis Configuration
REDIS_PASSWORD=redis_dev_password

# Application Secrets (use secure values in production!)
SECRET_KEY=dev_secret_key_change_in_production_abc123xyz789
FLASK_ENV=development

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# SSL/TLS Configuration
SSL_CERT_EMAIL=dev@enterprisescanner.com
DOMAIN_NAME=localhost

# Email Configuration (Development - use Mailtrap or similar)
SENDGRID_API_KEY=
FROM_EMAIL=dev@enterprisescanner.com
SALES_EMAIL=sales@enterprisescanner.com
SUPPORT_EMAIL=support@enterprisescanner.com

# Stripe Payment Configuration (Test keys)
STRIPE_PUBLIC_KEY=pk_test_your_test_key
STRIPE_SECRET_KEY=sk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=enterprisescanner-dev
AWS_REGION=us-east-1

# Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=DEBUG

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
MAX_CONTENT_LENGTH=104857600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=600
API_RATE_LIMIT_PER_MINUTE=1000

# Feature Flags
ENABLE_CHAT=true
ENABLE_ASSESSMENTS=true
ENABLE_ANALYTICS=true
ENABLE_API_DOCS=true
ENABLE_PARTNER_PORTAL=true
ENABLE_ONBOARDING=true
ENABLE_MONITORING=true

# Third-party Integrations
GOOGLE_ANALYTICS_ID=
HUBSPOT_API_KEY=
SLACK_WEBHOOK_URL=

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=enterprisescanner-dev-backups
